{
  "_comment": "Custom Mordhau server egg without SteamCMD",
  "meta": {
    "version": "PTDL_v2",
    "update_url": null
  },
  "name": "Mordhau ETI",
  "author": "drdacek@gmail.com",
  "description": "Mordhau dedicated server (custom version) without SteamCMD. Upload your own files.",
  "features": [],
  "docker_images": {
    "ghcr.io/parkervcp/generic:debian": "ghcr.io/parkervcp/generic:debian"
  },
  "startup": ".\/Mordhau\/Binaries\/Linux\/MordhauServer-Linux-Shipping \/Game\/Mordhau\/Maps\/{{DEFAULT_MAP}} -MaxSlots={{MAX_PLAYERS}} -USEALLAVAILABLECORES -Port={{SERVER_PORT}} -queryport={{QUERY_PORT}} -beaconport={{BEACON_PORT}}",
  "config": {
    "files": {},
    "startup": {
      "done": "Server started"
    },
    "logs": {},
    "stop": "^C"
  },
  "scripts": {
    "installation": {
      "script": "#!/bin/bash\nmkdir -p /mnt/server/Mordhau\necho \"Custom Mordhau server directory created. Please upload your files to /Mordhau.\"\necho \"You can now set the startup command in the egg.\"\n",
      "container": "ghcr.io/parkervcp/installers:debian",
      "entrypoint": "bash"
    }
  },
  "variables": [
    {
      "name": "Max Players",
      "description": "Max number of players on the server.",
      "env_variable": "MAX_PLAYERS",
      "default_value": "48",
      "user_viewable": true,
      "user_editable": true,
      "rules": "required|numeric|between:1,64",
      "field_type": "text"
    },
    {
      "name": "Default Map",
      "description": "Map to load on server start.",
      "env_variable": "DEFAULT_MAP",
      "default_value": "Grad/FL_Grad",
      "user_viewable": true,
      "user_editable": true,
      "rules": "required|string|max:40",
      "field_type": "text"
    },
    {
      "name": "Server Name",
      "description": "Server name as shown in browser.",
      "env_variable": "SERVER_NAME",
      "default_value": "Custom Mordhau Server",
      "user_viewable": true,
      "user_editable": true,
      "rules": "required|string|max:60",
      "field_type": "text"
    },
    {
      "name": "Server Password",
      "description": "Password required to join server.",
      "env_variable": "GAME_PASSWORD",
      "default_value": "",
      "user_viewable": true,
      "user_editable": true,
      "rules": "nullable|string|max:20",
      "field_type": "text"
    },
    {
      "name": "Admin Password",
      "description": "Password for admin access.",
      "env_variable": "ADMIN_PASSWORD",
      "default_value": "",
      "user_viewable": true,
      "user_editable": true,
      "rules": "nullable|string|max:20",
      "field_type": "text"
    },
    {
      "name": "Server Port",
      "description": "Port to run the server on.",
      "env_variable": "SERVER_PORT",
      "default_value": "7777",
      "user_viewable": true,
      "user_editable": true,
      "rules": "required|numeric",
      "field_type": "text"
    },
    {
      "name": "Query Port",
      "description": "Query port for server.",
      "env_variable": "QUERY_PORT",
      "default_value": "27015",
      "user_viewable": true,
      "user_editable": true,
      "rules": "required|numeric",
      "field_type": "text"
    },
    {
      "name": "Beacon Port",
      "description": "Beacon port for connections.",
      "env_variable": "BEACON_PORT",
      "default_value": "15000",
      "user_viewable": true,
      "user_editable": true,
      "rules": "required|numeric",
      "field_type": "text"
    }
  ]
}
